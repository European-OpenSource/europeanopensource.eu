---
/**
 * Hero section for homepage with animated EU flags and call-to-action
 */
import { Button } from "@walle/components";

const euCountries = [
  { name: "Italy", code: "it" },
  { name: "France", code: "fr" },
  { name: "Germany", code: "de" },
  { name: "Spain", code: "es" },
  { name: "Poland", code: "pl" },
  { name: "Netherlands", code: "nl" },
  { name: "Belgium", code: "be" },
  { name: "Sweden", code: "se" },
  { name: "Austria", code: "at" },
  { name: "Czech Republic", code: "cz" },
  { name: "Denmark", code: "dk" },
  { name: "Finland", code: "fi" },
  { name: "Greece", code: "gr" },
  { name: "Hungary", code: "hu" },
  { name: "Ireland", code: "ie" },
  { name: "Croatia", code: "hr" },
  { name: "Lithuania", code: "lt" },
  { name: "Latvia", code: "lv" },
  { name: "Slovakia", code: "sk" },
  { name: "Slovenia", code: "si" },
  { name: "Estonia", code: "ee" },
  { name: "Portugal", code: "pt" },
  { name: "Bulgaria", code: "bg" },
  { name: "Romania", code: "ro" },
  { name: "Luxembourg", code: "lu" },
  { name: "Malta", code: "mt" },
  { name: "Cyprus", code: "cy" },
];
---

<section class="hero">
  <div class="content-wrapper">
    <h1><span class="logo-text">European OpenSource</span></h1>
    <h2>
      Building Europe's open-source future through innovation, collaboration, and digital
      sovereignty.
    </h2>
    <Button link="/form" text="Submit Projects" iconName="mdi:arrow-right" type="secondary" />
  </div>
  {
    euCountries.map((country, index) => {
      // Calculate flag positioning and animation timing
      let top, left;
      if (index % 4 === 0) {
        top = Math.random() * 25;
        left = Math.random() * 100;
      } else if (index % 4 === 1) {
        top = Math.random() * 25 + 75;
        left = Math.random() * 100;
      } else if (index % 4 === 2) {
        top = Math.random() * 50 + 25;
        left = Math.random() * 20;
      } else {
        top = Math.random() * 50 + 25;
        left = Math.random() * 20 + 80;
      }
      const fadeDelay = (index * 0.1).toFixed(1);
      const floatDuration = (5 + Math.random() * 5).toFixed(1);
      const floatDelay = (Math.random() * 5).toFixed(1);
      return (
        <img
          src={`https://flagcdn.com/w80/${country.code}.png`}
          alt={country.name}
          class="flag"
          style={`
          top: ${top}%;
          left: ${left}%;
          animation-delay: ${fadeDelay}s, ${floatDelay}s;
          animation-duration: 1s, ${floatDuration}s;
        `}
        />
      );
    })
  }
</section>

<style>
  .hero {
    position: relative;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    padding: 0 1rem;
  }

  @keyframes blobMove {
    0% {
      transform: scale(1) translateY(0) rotate(0deg);
    }
    50% {
      transform: scale(1.15) translateY(-40px) rotate(20deg);
    }
    100% {
      transform: scale(1) translateY(0) rotate(0deg);
    }
  }

  .content-wrapper {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  h1 {
    margin: 0 0 1rem;
    color: var(--white);
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 800;
    letter-spacing: -0.03em;
    line-height: 1.1;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.5s ease-out 0.2s forwards;
  }

  .logo-text {
    background: linear-gradient(90deg, var(--white), var(--gray-light));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    display: inline-block;
  }

  h2 {
    margin: 0 0 2.5rem;
    color: var(--gray);
    font-size: clamp(1.2rem, 4vw, 1.8rem);
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.5s ease-out 0.6s forwards;
  }

  .flag {
    position: absolute;
    width: 35px;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
    opacity: 0;
    animation:
      fadeIn 1s ease-out forwards,
      float infinite ease-in-out;
    z-index: 2;
  }

  @media (max-width: 768px) {
    .flag {
      width: 25px;
    }

    h1 {
      margin-bottom: 0.5rem;
    }

    h2 {
      margin-bottom: 2rem;
    }
  }

  @keyframes fadeIn {
    to {
      opacity: 0.7;
    }
  }

  @keyframes float {
    0% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-10px) rotate(1deg);
    }
    100% {
      transform: translateY(0px) rotate(0deg);
    }
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

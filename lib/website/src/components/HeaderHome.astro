---
/**
 * Hero section for homepage with animated EU flags and call-to-action
 */
import { Button } from "@walle/components";

const euCountries = [
  { name: "Italy", code: "it" },
  { name: "France", code: "fr" },
  { name: "Germany", code: "de" },
  { name: "Spain", code: "es" },
  { name: "Poland", code: "pl" },
  { name: "Netherlands", code: "nl" },
  { name: "Belgium", code: "be" },
  { name: "Sweden", code: "se" },
  { name: "Austria", code: "at" },
  { name: "Czech Republic", code: "cz" },
  { name: "Denmark", code: "dk" },
  { name: "Finland", code: "fi" },
  { name: "Greece", code: "gr" },
  { name: "Hungary", code: "hu" },
  { name: "Ireland", code: "ie" },
  { name: "Croatia", code: "hr" },
  { name: "Lithuania", code: "lt" },
  { name: "Latvia", code: "lv" },
  { name: "Slovakia", code: "sk" },
  { name: "Slovenia", code: "si" },
  { name: "Estonia", code: "ee" },
  { name: "Portugal", code: "pt" },
  { name: "Bulgaria", code: "bg" },
  { name: "Romania", code: "ro" },
  { name: "Luxembourg", code: "lu" },
  { name: "Malta", code: "mt" },
  { name: "Cyprus", code: "cy" },
  { name: "United Kingdom", code: "gb" },
  { name: "Switzerland", code: "ch" },
  { name: "Norway", code: "no" },
  { name: "Iceland", code: "is" },
  { name: "Liechtenstein", code: "li" },
];
// ISO date for catalog launch (3 Mar 2026 12:30 Rome = 11:30 UTC)
const releaseDateIso = "2026-03-03T12:30:00Z";
---

<section class="hero">
  <div class="content-wrapper">
    <h1><span class="logo-text">European OpenSource</span></h1>
    <h2>Open code, shared future!</h2>
    <div class="countdown" role="status" aria-live="polite" data-release={releaseDateIso}>
      <div class="countdown-label">Next publication</div>
      <div class="countdown-timer" id="countdown-timer">
        <span class="segment"><span id="cd-days">0</span>d</span>
        <span class="sep">:</span>
        <span class="segment"><span id="cd-hours">00</span>h</span>
        <span class="sep">:</span>
        <span class="segment"><span id="cd-mins">00</span>m</span>
        <span class="sep">:</span>
        <span class="segment"><span id="cd-secs">00</span>s</span>
      </div>
    </div>
    <Button link="/projects" text="See the Catalog" iconName="mdi:arrow-right" type="secondary" />
  </div>
  {
    euCountries.map((country, index) => {
      // Calculate flag positioning and animation timing
      let top, left;
      if (index % 4 === 0) {
        top = Math.random() * 25;
        left = Math.random() * 100;
      } else if (index % 4 === 1) {
        top = Math.random() * 25 + 75;
        left = Math.random() * 100;
      } else if (index % 4 === 2) {
        top = Math.random() * 50 + 25;
        left = Math.random() * 20;
      } else {
        top = Math.random() * 50 + 25;
        left = Math.random() * 20 + 80;
      }
      const fadeDelay = (index * 0.1).toFixed(1);
      const floatDuration = (5 + Math.random() * 5).toFixed(1);
      const floatDelay = (Math.random() * 5).toFixed(1);
      return (
        <img
          src={`https://flagcdn.com/w80/${country.code}.png`}
          alt={country.name}
          class="flag"
          style={`
          top: ${top}%;
          left: ${left}%;
          animation-delay: ${fadeDelay}s, ${floatDelay}s;
          animation-duration: 1s, ${floatDuration}s;
        `}
        />
      );
    })
  }
  <script>
    (function () {
      const root = document.querySelector(".countdown");
      if (!root) return;
      const targetStr = root.dataset.release;
      const target = new Date(targetStr).getTime();
      const dEl = document.getElementById("cd-days");
      const hEl = document.getElementById("cd-hours");
      const mEl = document.getElementById("cd-mins");
      const sEl = document.getElementById("cd-secs");
      const timerEl = document.getElementById("countdown-timer");
      if (!dEl || !hEl || !mEl || !sEl || !timerEl) return;
      function pad(n) {
        return String(n).padStart(2, "0");
      }
      function update() {
        const now = Date.now();
        let diff = target - now;
        if (diff <= 0) {
          timerEl.textContent = "It's live!";
          clearInterval(t);
          return;
        }
        const s = Math.floor(diff / 1000) % 60;
        const m = Math.floor(diff / 1000 / 60) % 60;
        const h = Math.floor(diff / 1000 / 3600) % 24;
        const d = Math.floor(diff / 1000 / 3600 / 24);
        dEl.textContent = d;
        hEl.textContent = pad(h);
        mEl.textContent = pad(m);
        sEl.textContent = pad(s);
      }
      update();
      const t = setInterval(update, 1000);
    })();
  </script>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: var(--primary);
    padding: var(--space-4xl) var(--space-lg);
  }

  .content-wrapper {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 950px;
    margin: 0 auto;
  }

  h1 {
    margin: 0 0 var(--space-xl);
    color: var(--white);
    font-size: clamp(3.5rem, 8vw, 6rem);
    font-weight: 800;
    letter-spacing: -0.04em;
    line-height: 1;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
    opacity: 0;
    transform: translateY(40px);
    animation: fadeInUp 1.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.3s forwards;
  }

  .logo-text {
    background: var(--white);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }

  h2 {
    margin: 0 0 var(--space-3xl);
    color: rgba(255, 255, 255, 0.9);
    font-size: clamp(1.25rem, 4vw, 1.875rem);
    font-weight: 400;
    line-height: 1.4;
    max-width: 780px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.7s forwards;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.15);
  }

  /* Minimal countdown styles */
  .countdown {
    margin: 0 auto var(--space-lg);
    color: rgba(255, 255, 255, 0.95);
    font-weight: 600;
    z-index: 11;
  }

  .countdown-label {
    font-size: 0.9rem;
    opacity: 0.95;
    margin-bottom: 0.35rem;
  }

  .countdown-timer {
    display: inline-flex;
    gap: 0.5rem;
    align-items: baseline;
    font-size: 1.05rem;
    background: rgba(255, 255, 255, 0.06);
    padding: 0.35rem 0.6rem;
    border-radius: 999px;
    backdrop-filter: blur(6px);
  }

  .countdown-timer .segment {
    font-variant-numeric: tabular-nums;
  }

  .flag {
    position: absolute;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.4));
    opacity: 0;
    animation:
      fadeIn 2s ease-out forwards,
      float infinite ease-in-out;
    z-index: 2;
    transition: var(--transition);
  }

  .flag:hover {
    filter: drop-shadow(0 6px 12px rgba(0, 0, 0, 0.5));
    transform: scale(1.1);
  }

  @media (max-width: 768px) {
    .flag {
      width: 32px;
      height: 32px;
    }

    .hero {
      padding: var(--space-2xl) var(--space-md);
    }

    h1 {
      margin-bottom: var(--space-md);
    }

    h2 {
      margin-bottom: var(--space-2xl);
    }
  }

  @media (max-width: 480px) {
    .flag {
      width: 26px;
      height: 26px;
    }

    .hero {
      padding: var(--space-xl) var(--space-sm);
    }
  }

  @keyframes fadeIn {
    to {
      opacity: 0.75;
    }
  }

  @keyframes float {
    0% {
      transform: translateY(0px) rotate(0deg);
    }
    33% {
      transform: translateY(-8px) rotate(1deg);
    }
    66% {
      transform: translateY(4px) rotate(-0.5deg);
    }
    100% {
      transform: translateY(0px) rotate(0deg);
    }
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Prefers reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .flag {
      animation: fadeIn 2s ease-out forwards;
    }

    h1,
    h2 {
      animation: fadeIn 1s ease-out forwards;
    }
  }
</style>
